<section>
    <div class="container">
        <div class="border p-4">
            <div class="d-flex justify-content-between mb-2">
                <div>
                    <h5>Ratings & Reviews</h5>
                </div>
                <div>
                    <a href="/user/rateProduct?productId=<%=product._id%>"
                        class="btn btn-light text-dark shadow-sm border">Rate Product</a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-2 col-3 text-center mt-3">
                    <%if(locals.reviews !=undefined){ %>
                        <h2>
                            <%=locals.ratings[0]._id%> <i class="fas fa-star text-warning"></i>
                        </h2>

                        <p class="text-muted">
                            <%=locals.reviews.length%> Ratings <br> & <br>
                                Reviews
                        </p>
                </div>
                <div class="col-lg-1 col-2 me-0 justify-content-end d-flex">
                    <div class="mt-0">
                        <div class="mb-lg-1 mb-md-1 mb-3 font-size">5 <i class="fas fa-star"></i></div>
                        <div class="mb-lg-2 mb-md-2 mb-2 font-size">4 <i class="fas fa-star"></i></div>
                        <div class="mb-lg-2 mb-md-2  mb-3 font-size">3 <i class="fas fa-star"></i></div>
                        <div class="mb-lg-2 mb-md-2  mb-2 font-size">2 <i class="fas fa-star"></i></div>
                        <div class="font-size">1 <i class="fas fa-star"></i></div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar"
                            style="width: <%=locals.ratingsPercentage.fiveStar%>%" aria-valuenow="25" aria-valuemin="0"
                            aria-valuemax="100"></div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar"
                            style="width: <%=locals.ratingsPercentage.fourStar%>%" aria-valuenow="50" aria-valuemin="0"
                            aria-valuemax="100"></div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar"
                            style="width: <%=locals.ratingsPercentage.threeStar%>%" aria-valuenow="50" aria-valuemin="0"
                            aria-valuemax="100"></div>
                    </div>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-warning" role="progressbar"
                            style="width: <%=locals.ratingsPercentage.twoStar%>%" aria-valuenow="75" aria-valuemin="0"
                            aria-valuemax="100"></div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-danger" role="progressbar"
                            style="width: <%=locals.ratingsPercentage.oneStar%>%" aria-valuenow="100" aria-valuemin="0"
                            aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="col-1 me-0">
                    <%if(locals.ratings){ %>
                        <%locals.ratings.forEach((rating)=>{ %>
                            <%if(rating._id==5){%>
                                <p class="text-muted mb-1">
                                    <%=rating.count%>
                                </p>
                                <% } else if(rating._id==4){ %>

                                    <p class="text-muted mb-2">
                                        <%=rating.count%>
                                    </p>

                                    <% } else if(rating._id==3 ){ %>

                                        <p class="text-muted mb-2">
                                            <%=rating.count%>
                                        </p>

                                        <% } else if(rating._id==2){ %>

                                            <p class="text-muted mb-2">
                                                <%=rating.count%>
                                            </p>

                                            <% } else if(rating._id==1){ %>
                                                <p class="text-muted mb-2">
                                                    <%=rating.count%>
                                                </p>

                                                <% } %>

                                                    <% }) %>
                                                        <% } %>
                </div>
            </div>

            <hr class="mb-1">
            <div class="pt-3">
                <div class="">
                    <%if(locals.reviews !=undefined){ %>
                        <%for(let i=0 ;i < reviews.length ; i++){ %>
                            <%if(reviews[i].rating==1 ){%>
                                <p class="btn btn-sm bg-danger text-white" style="cursor: default; ">
                                    <%=reviews[i].rating%> <i class="fas fa-star fa-xs"></i>
                                </p>
                                <% } else if(reviews[i].rating==2){ %>
                                    <p class="btn btn-sm bg-warning text-white" style="cursor: default; ">
                                        <%=reviews[i].rating%> <i class="fas fa-star fa-xs"></i>
                                    </p>
                                    <% } else { %>
                                        <p class="btn btn-sm bg-success text-white mt-3" style="cursor: default; ">
                                            <%=reviews[i].rating%> <i class="fas fa-star fa-xs"></i>
                                        </p>
                                        <% } %>



                                            <h6 class="ms-3 fw-bold d-inline">
                                                <%=reviews[i].reviewTitle%>
                                            </h6>
                                            <p>
                                                <%=reviews[i].description%>
                                            </p>
                                            <span class="text-muted me-3">
                                                <%=reviews[i].userName%><i class="fas fa-circle-check"></i>
                                            </span>
                                            <span class="text-muted">
                                                <%=reviews[i].convertedDate.day%>
                                            </span>
                                            <hr class="mb-2">
                </div>
                <% } %>
                    <% } %>
            </div>
            <% } %>
        </div>
    </div>
</section>